\\ Criando banco de dados 
CREATE database Nome_Banco;

\\ User do banco 
Use Nome_Banco;


\\ Criando tabelas 
CREATE TABLE Minha_Tabela (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100),
    idade INT,
    telefone INT(20),
    email VARCHAR(100),
    endereco VARCHAR(200)
);

CREATE TABLE usuarios (
    id bigint primary key auto_increment,
    nome VARCHAR(100),
    usuario VARCHAR(50),
    senha VARCHAR(100),
    telefone VARCHAR(20),
    email VARCHAR(200),
    estado boolean not null default true
);

CREATE TABLE produtos (
    id bigint primary key auto_increment,
    nome VARCHAR(50) not null,
    descricao VARCHAR(200),
    preco DECIMAL(11) not null,
    quantidade int null
);

CREATE TABLE categoria (
    id int primary key auto_increment,
    Nome VARCHAR(50) not null unique,
    descricao VARCHAR(200)
);

\\ Dados em tabela 
INSERT INTO Nome_da_Tabela (nome, idade, telefone, email, endereco) 
VALUES ('Pedro', '21', '1196852543', 'pedrohr@gmail.com', 'Rua campanha gaucha');


\\ Visualizar Tabela 
SELECT * FROM Nome_da_Tabela;


\\ Removendo uma Tabela 
DROP TABLE Nome_Da_Tabela;


\\ Alterando dados de uma coluna 
UPDATE Nome_Tabela
SET Nome_Da_Coluna = 'Novo_dados'
WHERE id= 1;


\\ Add mais uma coluna na tabela 
ALTER TABLE Nome_Da_Tabela
ADD idade INT;


\\ Removendo uma coluna 
ALTER TABLE Nome_Da_Tabela
DROP COLUMN Nome_Da_Coluna;
